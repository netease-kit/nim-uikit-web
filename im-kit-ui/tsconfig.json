{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES5",
    "lib": ["DOM", "ES2020"],
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "composite": true,
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["./lib", "./es", "./dist"]
}
