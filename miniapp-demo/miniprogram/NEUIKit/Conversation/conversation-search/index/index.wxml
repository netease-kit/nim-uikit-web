<view class="search-page-wrapper">
  <!-- 动态状态栏占位 -->
  <view class="status-bar-placeholder" style="height: {{statusBarHeight}}px; background-color: #fff;"></view>
  
  <nav-bar title="{{searchTitleText}}" showBack="{{true}}"></nav-bar>
  
  <view class="search-wrapper">
    <view class="search-input-wrapper">
      <view class="search-icon-wrapper">
        <icon class="search-icon" size="{{16}}" color="#A6ADB6" type="icon-sousuo"></icon>
      </view>
      <input
        class="input"
        value="{{searchText}}"
        focus="{{inputFocus}}"
        bindinput="onInput"
        bindfocus="onInputFocus"
        bindblur="onInputBlur"
        placeholder="{{searchPlaceholder}}"
        style="background-color: #F5F7FA;"
      />
      <view wx:if="{{searchText}}" class="clear-icon" bindtap="clearInput">
        <icon type="icon-shandiao" size="{{16}}"></icon>
      </view>
    </view>
  </view>
  
  <view wx:if="{{searchResult.length > 0}}" class="search-result-wrapper">
    <view class="search-result-list">
      <view wx:for="{{searchResult}}" wx:key="renderKey">
        <view class="result-title" wx:if="{{item.title === 'friends'}}">
          {{friendText}}
        </view>
        <view class="result-title" wx:elif="{{item.title === 'groups'}}">
          {{teamText}}
        </view>
        <view wx:else>
          <search-result-item item="{{item}}"></search-result-item>
        </view>
      </view>
    </view>
  </view>
  
  <view wx:if="{{searchResult.length === 0 && searchText}}">
    <empty text="{{searchResultNullText}}"></empty>
  </view>
</view>