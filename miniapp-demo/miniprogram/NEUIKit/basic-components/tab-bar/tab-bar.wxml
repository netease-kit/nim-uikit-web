<view class="tabbar" wx:if="{{showTabBar}}">
  <view 
    wx:for="{{tabs}}" 
    wx:key="path" 
    class="tab-item {{currentPath === item.path ? 'active' : ''}}"
    data-path="{{item.path}}"
    bindtap="onTabClick"
  >
    <view class="tab-item-content">
      <view class="icon-wrapper">
        <image 
          src="{{currentPath === item.path ? item.selectedIcon : item.icon}}" 
          class="tab-icon"
        />
        <view 
          wx:if="{{item.key === '/pages/conversation/conversation-list/index' && conversationUnread || item.key === '/pages/contacts/index' && contactsUnread}}" 
          class="unread-dot"
        ></view>
      </view>
      <text class="tab-text">{{item.text}}</text>
    </view>
  </view>
</view>