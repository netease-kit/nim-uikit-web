<view class="input-wrapper {{disabled ? 'is-disabled' : ''}}">
  <input
    id="{{id}}"
    type="{{type}}"
    value="{{value}}"
    placeholder="{{placeholder}}"
    disabled="{{disabled}}"
    maxlength="{{maxlength}}"
    style="{{inputStyle}}"
    class="input"
    bindinput="handleInput"
    bindfocus="handleFocus"
    bindblur="handleBlur"
    bindconfirm="handleConfirm"
  />
  <view 
    wx:if="{{showClear && value}}"
    class="clear-icon"
    bindtap="clearInput"
  >
    Ã—
  </view>
</view>