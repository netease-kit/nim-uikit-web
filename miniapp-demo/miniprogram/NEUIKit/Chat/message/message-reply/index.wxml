<view class="reply-message" wx:if="{{replyMsg}}">
  <!-- 回复线条 -->
  <view class="reply-line"></view>
  
  <!-- 回复内容 -->
  <view class="reply-content">
    <!-- 发送者名称 -->
    <view class="reply-sender">{{senderName}}</view>
    
    <!-- 回复的消息内容 -->
    <view class="reply-text" wx:if="{{replyMsg.messageType === 'text'}}">
      {{replyMsg.text || ''}}
    </view>
    
    <!-- 图片消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'image'}}">
      <icon type="image" size="16" color="#666" />
      <text class="media-text">[图片]</text>
    </view>
    
    <!-- 语音消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'audio'}}">
      <icon type="voice" size="16" color="#666" />
      <text class="media-text">[语音]</text>
    </view>
    
    <!-- 视频消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'video'}}">
      <icon type="video" size="16" color="#666" />
      <text class="media-text">[视频]</text>
    </view>
    
    <!-- 文件消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'file'}}">
      <icon type="file" size="16" color="#666" />
      <text class="media-text">[文件] {{fileName}}</text>
    </view>
    
    <!-- 位置消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'location'}}">
      <icon type="location" size="16" color="#666" />
      <text class="media-text">[位置]</text>
    </view>
    
    <!-- 自定义消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'custom'}}">
      <icon type="custom" size="16" color="#666" />
      <text class="media-text">[自定义消息]</text>
    </view>
    
    <!-- 通知消息 -->
    <view class="reply-media" wx:elif="{{replyMsg.messageType === 'notification'}}">
      <icon type="notification" size="16" color="#666" />
      <text class="media-text">[通知]</text>
    </view>
    
    <!-- 未知类型 -->
    <view class="reply-media" wx:else>
      <icon type="unknown" size="16" color="#666" />
      <text class="media-text">[未知消息类型]</text>
    </view>
  </view>
  
  <!-- 关闭按钮 -->
  <view class="reply-close" wx:if="{{showClose}}" bindtap="handleClose">
    <icon type="close" size="16" color="#999" />
  </view>
</view>