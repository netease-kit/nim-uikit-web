<view class="forward-message" wx:if="{{forwardMsg}}">
  <!-- 转发消息头部 -->
  <view class="forward-header">
    <icon type="forward" size="16" color="#999" />
    <text class="forward-title">转发消息</text>
  </view>
  
  <!-- 转发消息内容 -->
  <view class="forward-content">
    <!-- 单条消息转发 -->
    <view class="single-forward" wx:if="{{forwardType === 'single'}}">
      <!-- 发送者信息 -->
      <view class="sender-info">
        <message-avatar 
          account="{{forwardMsg.senderId}}"
          avatar="{{forwardMsg.senderAvatar}}"
          size="32"
        />
        <text class="sender-name">{{senderName}}</text>
      </view>
      
      <!-- 消息内容 -->
      <view class="message-content">
        <!-- 文本消息 -->
        <view class="text-content" wx:if="{{forwardMsg.messageType === 'text'}}">
          {{forwardMsg.text}}
        </view>
        
        <!-- 图片消息 -->
        <view class="media-content" wx:elif="{{forwardMsg.messageType === 'image'}}">
          <icon type="image" size="16" color="#666" />
          <text class="media-text">[图片]</text>
        </view>
        
        <!-- 语音消息 -->
        <view class="media-content" wx:elif="{{forwardMsg.messageType === 'audio'}}">
          <icon type="voice" size="16" color="#666" />
          <text class="media-text">[语音]</text>
        </view>
        
        <!-- 视频消息 -->
        <view class="media-content" wx:elif="{{forwardMsg.messageType === 'video'}}">
          <icon type="video" size="16" color="#666" />
          <text class="media-text">[视频]</text>
        </view>
        
        <!-- 文件消息 -->
        <view class="media-content" wx:elif="{{forwardMsg.messageType === 'file'}}">
          <icon type="file" size="16" color="#666" />
          <text class="media-text">[文件] {{fileName}}</text>
        </view>
        
        <!-- 其他类型 -->
        <view class="media-content" wx:else>
          <icon type="unknown" size="16" color="#666" />
          <text class="media-text">[{{messageTypeText}}]</text>
        </view>
      </view>
    </view>
    
    <!-- 多条消息转发（聊天记录） -->
    <view class="multi-forward" wx:elif="{{forwardType === 'multi'}}">
      <!-- 聊天记录标题 -->
      <view class="chat-history-title">
        <icon type="chat" size="16" color="#666" />
        <text class="title-text">聊天记录</text>
      </view>
      
      <!-- 参与者信息 -->
      <view class="participants" wx:if="{{participants.length > 0}}">
        <text class="participants-text">{{participantsText}}</text>
      </view>
      
      <!-- 消息预览列表 -->
      <view class="message-preview-list">
        <view 
          class="message-preview-item" 
          wx:for="{{previewMessages}}" 
          wx:key="messageClientId"
          wx:for-item="item"
        >
          <text class="preview-sender">{{item.senderName}}:</text>
          <text class="preview-content">{{item.previewText}}</text>
        </view>
        
        <!-- 更多消息提示 -->
        <view class="more-messages" wx:if="{{totalCount > previewMessages.length}}">
          <text class="more-text">...还有{{totalCount - previewMessages.length}}条消息</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 转发时间 -->
  <view class="forward-time" wx:if="{{showTime}}">
    <text class="time-text">{{formatTime}}</text>
  </view>
</view>