<view class="user-info-wrapper">
  <!-- 动态状态栏占位 -->
  <view class="status-bar-placeholder" style="height: {{statusBarHeight}}px;"></view>
  
  <!-- 用户卡片区域 -->
  <view class="card-wrapper" bindtap="gotoMyDetail">
    <user-card 
      account="{{myUserInfo && myUserInfo.accountId}}"
      nick="{{myUserInfo && myUserInfo.name}}"
      avatar="{{myUserInfo && myUserInfo.avatar}}"
    ></user-card>
    <icon class="arrow" type="icon-jiantou" size="{{16}}" color="#A6ADB6"></icon>
  </view>
  
  <!-- 分隔阴影 -->
  <view class="box-shadow"></view>
  
  <!-- 功能菜单区域 -->
  <view class="userInfo-item-wrapper">
    <!-- 设置 -->
    <view class="userInfo-item" bindtap="gotoSetting">
      <view class="item-left">
        <icon class="guanyu" type="icon-shezhi1" size="{{20}}" color="#333"></icon>
        <text>{{setText}}</text>
      </view>
      <icon class="icon-arrow" type="icon-jiantou" size="{{16}}" color="#A6ADB6"></icon>
    </view>
    
    <!-- 分隔线 -->
    <view class="shadow"></view>
    
    <!-- 关于 -->
    <view class="userInfo-item" bindtap="gotoAbout">
      <view class="item-left">
        <icon class="guanyu" type="icon-guanyu" size="{{20}}" color="#333"></icon>
        <text>{{commsEaseText}}</text>
      </view>
      <icon class="icon-arrow" type="icon-jiantou" size="{{16}}" color="#A6ADB6"></icon>
    </view>
  </view>
</view>