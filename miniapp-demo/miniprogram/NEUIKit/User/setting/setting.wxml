<view class="wrapper">
  <!-- 动态状态栏占位 -->
  <view class="status-bar-placeholder" style="height: {{statusBarHeight}}px;"></view>
  
  <!-- 导航栏 -->
  <nav-bar title="{{setText}}" bind:back="onBack"></nav-bar>
  
  <!-- 设置项容器 -->
  <view class="setting-item-wrapper">
    <!-- 云端会话开关 -->
    <view class="setting-item">
      <view class="item-left">{{enableV2CloudConversationText}}</view>
      <view class="item-right">
        <switch 
          checked="{{enableV2CloudConversation}}"
          bindchange="onChangeEnableV2CloudConversation"
        ></switch>
      </view>
    </view>
    
    <!-- 分隔线 -->
    <!-- <view class="divider"></view> -->
    
    <!-- 语言切换开关 - 已隐藏 -->
    <!-- <view class="setting-item">
      <view class="item-left">{{switchToEnglishText}}</view>
      <view class="item-right">
        <switch 
          checked="{{switchToEnglishFlag}}"
          bindchange="onChangeSwitchToEnglishFlag"
        ></switch>
      </view>
    </view> -->
  </view>
  
  <!-- 退出登录按钮 -->
  <view class="logout-btn" bindtap="showLogoutConfirm">
    {{logoutText}}
  </view>
  
  <!-- 退出登录确认模态框 -->
  <modal 
    title="提示"
    visible="{{showLogoutModal}}"
    confirm-text="{{confirmText}}"
    cancel-text="{{cancelText}}"
    bindconfirm="handleLogout"
    bindcancel="cancelLogout"
  >
    {{logoutConfirmText}}
  </modal>
</view>