<view class="wrapper">
  <!-- 导航栏 -->
  <nav-bar title="{{getTitle()}}" bind:back="onBack">
    <view slot="right" class="nav-bar-text" bindtap="onUserInfoConfirm">
      {{okText}}
    </view>
  </nav-bar>
  
  <!-- 输入框容器 -->
  <view class="userInfo-item-wrapper">
    <input 
      class="input"
      type="text"
      value="{{inputValue}}"
      maxlength="{{getMaxLength()}}"
      placeholder="请输入内容"
      bindinput="onInputChange"
      bindfocus="onInputFocus"
      bindblur="onInputBlur"
      focus="{{true}}"
    />
    
    <!-- 清除按钮 -->
    <view wx:if="{{showClearIcon}}" class="clear-icon" bindtap="clearInputValue">
      <icon type="clear" size="16" color="#999"></icon>
    </view>
  </view>
  
  <!-- Toast提示 -->
  <toast 
    wx:if="{{showToast}}"
    message="{{toastMessage}}"
    bind:close="onToastClose"
  ></toast>
</view>