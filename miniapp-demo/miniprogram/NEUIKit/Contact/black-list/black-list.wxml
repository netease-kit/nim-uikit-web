<view class="blacklist-container">
  <!-- 动态状态栏占位 -->
  <view class="status-bar-placeholder" style="height: {{statusBarHeight}}px; background-color: #fff;"></view>
  
  <!-- 导航栏 -->
  <nav-bar 
    title="{{blacklistText}}" 
    showLeft="{{false}}" 
    backgroundColor="#ffffff"
    showSetting="{{false}}"
  ></nav-bar>
  
  <!-- 黑名单列表 -->
  <view class="blacklist-content">
    <!-- 子标题提示 -->
    <view wx:if="{{blacklist.length > 0}}" class="blacklist-subtitle">
      {{blacklistSubTitle}}
    </view>
    
    <view wx:if="{{blacklist.length > 0}}" class="blacklist-list">
      <view 
        wx:for="{{blacklist}}" 
        wx:key="accountId" 
        class="blacklist-item" 
        bindtap="handleBlacklistItemClick" 
        data-item="{{item}}"
      >
        <avatar 
          account="{{item.accountId}}"
          avatar="{{item.avatar}}"
          nick="{{item.nick || item.accountId}}"
          size="{{42}}"
        ></avatar>
        
        <view class="blacklist-info">
          <view class="blacklist-name">
            <appellation 
              account="{{item.accountId}}"
              showAlias="{{true}}"
              prefix=""
            ></appellation>
          </view>
        </view>
        
        <view class="blacklist-actions">
          <view class="remove-btn" bindtap="handleRemoveFromBlacklist" data-account="{{item.accountId}}">
            {{removeFromBlacklistText}}
          </view>
        </view>
      </view>
    </view>
    
    <!-- 空状态 -->
    <view wx:else class="empty-container">
      <empty 
        type="noBlacklist"
        text="{{noBlacklistText}}"
      ></empty>
    </view>
  </view>
</view>