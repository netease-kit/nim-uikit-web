/* 状态栏占位符 */
.status-bar-placeholder {
  width: 100%;
  background-color: #fff;
}

.create-team-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.create-team-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 群聊名称输入区域 */
.team-name-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.team-name-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.team-name-input:focus {
  border-color: #337ecc;
}

/* 预选成员显示区域 */
.preselected-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.preselected-member {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e3f2fd;
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.member-tag {
  font-size: 24rpx;
  color: #1976d2;
  background: #e3f2fd;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

/* 成员选择区域 */
.member-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 已选成员列表 */
.selected-members {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.members-list {
  white-space: nowrap;
  height: 160rpx;
}

.member-item {
  display: inline-block;
  position: relative;
  margin-right: 20rpx;
  text-align: center;
  vertical-align: top;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin-bottom: 10rpx;
}

.member-name {
  font-size: 24rpx;
  color: #666;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

/* 创建按钮 */
.create-btn-container {
  padding: 30rpx;
  background: white;
  border-top: 2rpx solid #f0f0f0;
}

.create-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.create-btn.active {
  background: #337ecc;
  color: white;
}

.create-btn.disabled {
  background: #e5e5e5;
  color: #999;
}