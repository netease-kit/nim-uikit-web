/* 团队头像编辑页面样式 */
.team-avatar-edit-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.nav-bar {
  background-color: #ffffff;
  border-bottom: 1px solid #e5e5e5;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.nav-left {
  display: flex;
  align-items: center;
  color: #333333;
}

.nav-back-text {
  margin-left: 4px;
  font-size: 16px;
}

.nav-title {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
}

.nav-right {
  width: 60px;
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding-top: 88px; /* 导航栏高度 + 状态栏高度 */
  padding-bottom: 20px;
}

/* 当前头像显示区域 */
.avatar-container {
  background-color: #ffffff;
  padding: 32px 16px;
  margin: 16px;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.current-avatar {
  position: relative;
  width: 80px;
  height: 80px;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #ffffff;
  font-size: 24px;
  font-weight: 600;
}

.upload-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-icon-img {
  width: 24px;
  height: 24px;
}

/* 默认头像选择区域 */
.default-avatars-container {
  background-color: #ffffff;
  margin: 0 16px 16px;
  border-radius: 12px;
  padding: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16px;
}

.avatars-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  justify-content: space-between;
}

.avatar-item {
  position: relative;
  width: 48px;
  height: 48px;
  border-radius: 8px;
  overflow: hidden;
  border: 2px solid transparent;
}

.default-avatar-image {
  width: 100%;
  height: 100%;
}

/* 保存按钮 */
.save-button-container {
  padding: 0 16px;
  margin-top: auto;
}

.save-button {
  width: 100%;
  height: 48px;
  background-color: #007aff;
  color: #ffffff;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
}

.save-button:disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 加载提示 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  background-color: #ffffff;
  padding: 24px;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 12px;
  font-size: 14px;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}